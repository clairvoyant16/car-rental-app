<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dashboard">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#27445C"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userProfileIcon"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:src="@drawable/userprofile2" />

            <ImageView
                android:id="@+id/carRentalIcon"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="110dp"
                android:layout_weight="1"
                android:src="@drawable/splashbackgroundx" />

            <ImageView
                android:id="@+id/signOutIcon"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:src="@drawable/signoutlogo" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView> <!-- functionality -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/alegreya"
        android:text="Select a Brand"
        android:textSize="36sp"
        android:textStyle="bold" /> <!-- select a brand -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="60dp"
        android:text="_________________________________" /> <!-- underline -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:elevation="10dp"
                android:layout_marginLeft="15dp"
                android:outlineAmbientShadowColor="@color/black">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/hondalogo" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:elevation="10dp"
                android:outlineAmbientShadowColor="@color/black">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/tatalogo"
                    android:layout_marginRight="15dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:elevation="10dp"
                android:layout_marginLeft="15dp"
                android:outlineAmbientShadowColor="@color/black">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/mahindralogox" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:elevation="10dp"
                android:outlineAmbientShadowColor="@color/black">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/suzukilogo"
                    android:layout_marginRight="15dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>




    </LinearLayout>


</LinearLayout>

